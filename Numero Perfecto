// Número Perfecto.
#include<iostream>
#include<string.h>
#include<math.h>
using namespace std;
int PerfectNumber(int a){
	int b;
	int sum = 0;
	for (b=1; b < a; b++){
		if (a % b == 0) sum += b;
	}
	if (sum == a){
	cout << "El número es Perfecto" << endl;
	}
	else{
		cout << "El número no es perfecto" << endl;
		return 0;
	}
	return 0;
}
int main(){
	PerfectNumber(8129);
}

