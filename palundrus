#include <iostream>
#include <cmath>
#include <cstring>

using namespace std;

void palindrom(int a){
    cout<<"escribe un numero: ";
    cin>>a;
    string word = to_string(a);
    string aux_word = "";
    
    for (int i = word.size();i>=0; i--)
        aux_word += word[i];
        
    cout <<"el numero normal es: "<<word<<endl;
    cout <<"el numero invertido es: "<<aux_word<<endl;
    if (word == aux_word){
        cout<<"como el numero normal y el invertido son iguales, es un numero palindromico!!!"<<endl;
    }else{
        cout<<"el numero normal no es igual que el invertido, por lo tanto no es palindromico."<<endl;
    }
}

int main(){
    palindrom(0);
    return 0;
}
