//NÃºmeros Narcisistas
#include <iostream>
#include <math.h>
using namespace std;
double Narcisist(int a){
	string stringNumber = to_string(a);
	double largenum = stringNumber.size();
	double sum = 0;
	for(int b = 0; b < largenum; b++){
		double digito = stringNumber[b] - '0';
		double exponent = pow(digito, largenum);
		sum = sum + exponent;
	}
	if(sum == a){
		cout <<"Es un numero Narcisista"<< endl;
	}
	else{
		cout <<"No es un numero Narcisista" <<endl;
	}
	return 0;
}
int main(){
	Narcisist(23);
}
